<% include ../partials/header %>

	<div class='container'>
		<div class='row'>
			<h1 id="edit-h1">Editing <%southpark.name%></h1>

				<div style='width: 30%; margin: 0 auto;'>
<form action="/southpark/<%=southpark._id%>?_method=PUT" method="POST">
		<div class='form-group'>
		<input class='form-control' type='text' name='southpark[name]' value="<%=southpark.name%>" >
		</div>
		<div class='form-group'>
		<input class='form-control' type="number" name='southpark[amount]' value="<%=southpark.amount %>" min="1.0" step="1.0" >
		</div>
		<div class='form-group'>
		<input class='form-control' type='text' name='southpark[image]' value="<%=southpark.image%>">
		</div>
		<div class='form-group'>
		<textarea class='form-control'	name="southpark[description]"><%=southpark.description%></textarea>
		<!-- <input class='form-control' type='text' name='description' placeholder='type description'> -->
		</div>
		<div class='form-group'>
		<button class='btn btn-lg btn-primary btn-block'>Submit! </button>	
		</div>
</form>
				</div>
				
		</div>
	</div>
